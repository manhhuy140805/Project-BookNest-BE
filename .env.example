# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Server Configuration
PORT="8080"
NODE_TLS_REJECT_UNAUTHORIZED="0"

# Database Configuration (PostgreSQL)
DATABASE_URL="postgres://username:password@host:port/database?sslmode=no-verify"

# JWT Secret (Change this to a strong random string)
JWT_SECRET="your_super_secret_change_this_in_production"

# Redis Configuration (for Rate Limiting & Caching)
# Option 1: Local Redis (Development)
# REDIS_URL="redis://localhost:6379"

# Option 2: Upstash Redis (Production/Cloud)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_token"
REDIS_HOST="your-redis-instance.upstash.io"
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password"
REDIS_TLS="true"

# Cloudinary Configuration (for Image Upload)
API_KEY_CLOUDINARY="your_cloudinary_api_key"
API_SECRET_CLOUDINARY="your_cloudinary_api_secret"
CLOUD_NAME_CLOUDINARY="your_cloudinary_cloud_name"

# Supabase Configuration (for File Storage)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your_supabase_anon_key"

# Email Configuration
# Resend API (Primary - Recommended)
RESEND_API_KEY="re_your_resend_api_key"

# Gmail SMTP (Fallback - Optional)
MAIL_HOST="smtp.gmail.com"
MAIL_PORT="587"
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your_gmail_app_password"
MAIL_FROM="YourApp <noreply@yourdomain.com>"

# Application URL (for email links)
APP_URL="http://localhost:8080"

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_CALLBACK_URL="http://localhost:8080/auth/google/callback"
# FRONTEND_URL="http://localhost:3000"

# üéØ DEMO MODE Configuration
# ===========================
# IMPORTANT: These settings are for development/demo purposes only!
# Set EMAIL_MODE=prod and DEMO_BYPASS_VERIFY=false in production!

# Email Mode: 'demo' or 'prod'
# - demo: Logs email links to console AND includes them in API responses
# - prod: Only sends emails, no logging or response inclusion
EMAIL_MODE=demo

# Auto-verify users on registration (skip email verification step)
# - true: Users are automatically verified (no email check needed)
# - false: Users must click verification link (recommended for demos)
DEMO_BYPASS_VERIFY=false

# üìù RECOMMENDED SETTINGS FOR DIFFERENT SCENARIOS:
# 
# For Development/Testing:
#   EMAIL_MODE=demo
#   DEMO_BYPASS_VERIFY=false
#
# For Quick Demos (bypass email completely):
#   EMAIL_MODE=demo
#   DEMO_BYPASS_VERIFY=true
#
# For Production (ALWAYS use these):
#   EMAIL_MODE=prod
#   DEMO_BYPASS_VERIFY=false
