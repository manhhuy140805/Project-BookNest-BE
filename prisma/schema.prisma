datasource db {
  provider = "postgresql"
}

generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  moduleFormat  = "cjs"
}

enum Role {
  USER
  ADMIN
  MODERATOR
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  hashPassword  String
  fullName      String?
  avatarUrl     String?
  bio           String?
  dateOfBirth   DateTime?
  role          Role      @default(USER)
  ratings       Rating[]
  favoriteBooks Book[]
  isActive      Boolean   @default(true)
  isVerified    Boolean   @default(false)
  createdAt     DateTime  @default(now())
}

model Book {
  id          Int        @id @default(autoincrement())
  title       String
  author      String
  categoryId  Int
  category    Category   @relation(fields: [categoryId], references: [id])
  ratings     Rating[]
  createdAt   DateTime   @default(now())

  users User[]
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  books  Book[]
}

model Rating {
  id        Int      @id @default(autoincrement())
  score     Int
  userId    Int
  bookId    Int
  user      User     @relation(fields: [userId], references: [id])
  book      Book     @relation(fields: [bookId], references: [id])
  createdAt DateTime @default(now())
}