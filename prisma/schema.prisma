datasource db {
  provider = "postgresql"
}

generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  moduleFormat  = "cjs"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  hashPassword  String
  ratings   Rating[]
  createdAt DateTime @default(now())
}

model Book {
  id          Int        @id @default(autoincrement())
  title       String
  author      String
  categoryId  Int
  category    Category   @relation(fields: [categoryId], references: [id])
  ratings     Rating[]
  createdAt   DateTime   @default(now())
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  books  Book[]
}

model Rating {
  id        Int      @id @default(autoincrement())
  score     Int
  userId    Int
  bookId    Int
  user      User     @relation(fields: [userId], references: [id])
  book      Book     @relation(fields: [bookId], references: [id])
  createdAt DateTime @default(now())
}